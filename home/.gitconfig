[alias]
	st = status
	ci = commit
	co = checkout
	di = diff
	b = branch -va
	root = rev-parse --show-toplevel
	cp = cherry-pick
	f = fetch
	logg = log --decorate --graph --color
	logo = log --decorate --graph --color --oneline
	loga = log --decorate --graph --color --oneline --all
	up = !git pull --rebase || (git rebase --abort && git pull)
	moustache = stash
[color]
	branch = auto
	ui = auto
[core]
	quotepath = false
	editor = /usr/bin/vim
[diff]
	mnemonicprefix = true
[push]
	default = upstream
[merge]
	stat = true
